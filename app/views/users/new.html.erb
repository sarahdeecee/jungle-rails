<section class="users-new">

  <header class="page-header">
    <h1>Register an Account</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
    <%= form_for :user, url: '/users' do |form| %>



      <div class="form-group">
        First Name: <%= form.text_field :first_name, class: 'form-control' %>

        Last Name: <%= form.text_field :last_name, class: 'form-control' %>
        
        Email: <%= form.text_field :email, class: 'form-control'  %>
        
        Password: <%= form.password_field :password, class: 'form-control'  %>
      </div>

      <%= form.submit "Submit", class: 'btn btn-primary' %>
    
    <% end %>
    </div>
  </div>

</section>
